<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.actualizar.ActualizarPrestamoFragment"
    android:background="?attr/backgroundColor">


    <Spinner
        android:id="@+id/spEstudiante"
        android:layout_width="320dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toTopOf="@+id/spLibro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spLibro"
        android:layout_width="320dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toTopOf="@+id/TxtFechaRetiro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/TxtFechaRetiro"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:drawableStart="@drawable/ic_date_24"
        android:hint="Fecha de Retiro"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TxtFechaEntrega"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:drawableStart="@drawable/ic_date_24"
        android:hint="Fecha de Entrega"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnEditarP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>